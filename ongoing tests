##

## extract year in new column 18

count = 0
for row in my_data:
    if count == 0:
        row.append('Start year - 18')
        count += 1
    else:
        if row[2].strip() == "":
            row.append('')
        else:
            new_r2 = datetime.datetime.strptime(row[2], '%d/%m/%Y')
            row.append(new_r2.year)
    
##

print (my_data[0])
print (my_data[1])

##

## award size category in new column 19
## large > 1m
## medium 200k - 1m
## small 50k - 200k
## micro <50k

count = 0
for row in my_data:
    if count == 0:
        row.append('Award category - 19')
        count += 1
    else:
        if row[14]>=1000000:
            row.append('Large')
        elif row[14]<1000000 and row[14]>=200000:
            row.append('Medium')
        elif row[14]<200000 and row[14]>=50000:
            row.append('Small')
        elif row[14]<50000:
            row.append('Micro')
        else:
            print ('oops')
            row.append('error')
            
