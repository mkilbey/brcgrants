for row in my_data[0:10]:
    print (row[14])
    print (row[19])
    
##

# where col 5 starts with industry, it's commercial. new column 20

count = 0
for row in my_data:
    if count == 0:
        row.append('Commercial? - 20')
        count += 1
    else:
        if row[5][0:8] == "Industry":
            row.append('Yes')
        else:
            row.append('No')

